<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_browse">

    <fragment
        android:id="@+id/navigation_browse"
        android:name="com.example.sozieassessment.ui.home.BrowseFragment"
        android:label="@string/browse"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_wish_list"
        android:name="com.example.sozieassessment.ui.dashboard.WishListFragment"
        android:label="@string/wish_list"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_requests"
        android:name="com.example.sozieassessment.ui.notifications.RequestsFragment"
        android:label="@string/requests"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_help"
        android:name="com.example.sozieassessment.ui.help.HelpFragment"
        android:label="@string/help"
        tools:layout="@layout/fragment_notifications" />

</navigation>